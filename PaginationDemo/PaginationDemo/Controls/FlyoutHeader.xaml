<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaginationDemo.Controls.FlyoutHeader">
  <ContentView.Content>
        <Grid>
            <Image Source="background2.jpg" 
                   Aspect="AspectFill"/>
            <Grid Margin="30" VerticalOptions="Center">

                <StackLayout Orientation="Horizontal">
                    <Image Source="userimg.png" 
                       HeightRequest="80"
                       Aspect="AspectFit"/>
                    <Grid HorizontalOptions="EndAndExpand"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal"
                         Grid.Row="1">
                    <Label HorizontalOptions="StartAndExpand"
                       VerticalTextAlignment="Center"
                       Text="Siddhant"
                           TextColor="White" />
                    <Image Source="rightarrow3.png"                      
                           HeightRequest="18"
                           HorizontalOptions="End"/>
                </StackLayout>
            </Grid>
        </Grid>
    </ContentView.Content>
</ContentView>