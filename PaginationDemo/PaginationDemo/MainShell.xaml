<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaginationDemo.MainShell"
             xmlns:views="clr-namespace:PaginationDemo.Views"
             xmlns:controls="clr-namespace:PaginationDemo.Controls">
    <Shell.FlyoutHeader>
        <DataTemplate>
            <controls:FlyoutHeader/>
        </DataTemplate>
    </Shell.FlyoutHeader>
    <FlyoutItem>
        <ShellContent ContentTemplate="{DataTemplate views:AccountsView}"/>
    </FlyoutItem>
    <FlyoutItem>
        <ShellContent ContentTemplate="{DataTemplate views:AddAccount}"/>
    </FlyoutItem>
</Shell>